<Window x:Name="Login" x:Class="SALESTHEAVIA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SALESTHEAVIA"
        mc:Ignorable="d"
        Title="Авторизация" Height="400" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="log_box" HorizontalAlignment="Center" Margin="0,123,0,0" TextWrapping="Wrap" Text="123" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="pass_box" HorizontalAlignment="Center" Margin="0,180,0,0" TextWrapping="Wrap" Text="123" VerticalAlignment="Top" Width="120" InputScope="Default"/>
        <Button x:Name="enter_btn" Content="Войти" HorizontalAlignment="Center" Margin="0,258,0,0" VerticalAlignment="Top" Click="enter_btn_Click"/>
        <Button x:Name="reg_btn" Content="Регистрация" HorizontalAlignment="Center" Margin="0,305,0,0" VerticalAlignment="Top" Click="reg_btn_Click"/>
        <Label Content="Логин" HorizontalAlignment="Center" Margin="0,97,0,0" VerticalAlignment="Top"/>
        <Label Content="Пароль" HorizontalAlignment="Center" Margin="0,154,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.494,0.967"/>

    </Grid>
</Window>
